<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        tools:overrideLibrary="android.support.compat, android.arch.lifecycle" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android3dmodelviewer"
        tools:targetApi="31">
        <activity
            android:name="com.htm.simple.android_3d_model_viewer.model3D.MainActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.htm.simple.android_3d_model_viewer.model3D.view.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName="com.htm.simple.android_3d_model_viewer.model3D.MainActivity" >
        </activity>
        <activity
            android:name="com.htm.simple.android_3d_model_viewer.view.TextActivity"
            android:label="@string/title_activity_text"
            android:parentActivityName="com.htm.simple.android_3d_model_viewer.model3D.MainActivity" >
        </activity>
        <activity
            android:name="com.htm.simple.android_3d_model_viewer.model3D.view.ModelActivity"
            android:label="@string/title_activity_model"
            android:parentActivityName="com.htm.simple.android_3d_model_viewer.model3D.MainActivity" >

            <!-- android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" -->
        </activity>
    </application>

</manifest>